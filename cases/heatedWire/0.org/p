FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 1e5;

boundaryField
{
    Top
    {
        type            calculated;
        value           $internalField;
    }

    Sides
    {
        type            calculated;
        value           $internalField;
        
    }
    
    FrontAndBack
    {
        type            symmetryPlane;
    }
    
    Bottom
    {
        type            calculated;
        value           $internalField;
    }
    
    Wire
    {
        type            calculated;
        value           $internalField;
    }
}

// ************************************************************************* //
